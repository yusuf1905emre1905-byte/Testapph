name: Build TestApp

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v3

    - name: Set up Java
      uses: actions/setup-java@v3
      with:
        java-version: '17'

    - name: Compile Java
      run: javac -d out src/main/java/com/example/testapp/Main.java

    - name: Create JAR
      run: jar cfe TestApp.jar com.example.testapp.Main -C out .

    - name: Upload JAR Artifact
      uses: actions/upload-artifact@v3
      with:
        name: TestApp
        path: TestApp.jar
